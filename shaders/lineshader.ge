#version 330 core

layout(triangles) in;             // Input: triangles
layout(line_strip, max_vertices = 6) out; // Output: line segments

uniform mat4 projection;
uniform mat4 view;
uniform mat4 model;

void main() {
    for (int i = 0; i < 3; i++) {
        vec4 p0 = gl_in[i].gl_Position;
        vec4 p1 = gl_in[(i + 1) % 3].gl_Position;

        gl_Position = p0;
        EmitVertex();

        gl_Position = p1;
        EmitVertex();

        EndPrimitive();
    }
}
